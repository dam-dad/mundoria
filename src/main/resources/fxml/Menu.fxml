<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Label text="MundorIA">
                    <font>
                        <Font name="Papyrus" size="85.0" />
                    </font>
                </Label>
            </children>
         <BorderPane.margin>
            <Insets top="30.0" />
         </BorderPane.margin>
        </HBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="15.0">
            <children>
                <Button fx:id="nuevaPartidaButton" onAction="#onNuevaPartida" prefWidth="200" text="Nueva Partida" />
                <Button fx:id="continuarPartidaButton" onAction="#onContinuarPartida" prefWidth="200" text="Cargar Partida" />
                <Button fx:id="historiaButton" onAction="#onHistoria" prefWidth="200" text="Historias" />
                <Button fx:id="ajustesButton" onAction="#onAjustes" prefWidth="200" text="Ajustes" />
                <Button fx:id="salirButton" onAction="#onSalir" prefWidth="200" text="Salir" />
            </children>
         <BorderPane.margin>
            <Insets top="120.0" />
         </BorderPane.margin>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Label text="Versión 0.0">
                    <font>
                        <Font name="Bell MT" size="14.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Jarod Peña Castro y Joel Gómez Salgado">
                    <font>
                        <Font name="Bell MT" size="13.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </bottom>
</BorderPane>
